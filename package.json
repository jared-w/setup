    "ghc",
    "cabal",
    "setup"
  ],
  "author": "GitHub",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.1.1",
    "@actions/exec": "^1.0.1",
    "@actions/tool-cache": "^1.1.1",
    "cross-fetch": "^3.0.4",
    "semver": "^6.1.1"
  },
  "devDependencies": {
    "@actions/io": "^1.0.1",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.8",
    "@types/semver": "^6.2.0",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^2.3.0",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "prettier": "^1.19.1",
    "rollup": "^1.27.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript2": "^0.25.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.7.2"
