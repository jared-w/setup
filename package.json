{
  "name": "setup-haskell",
  "version": "1.0.0",
  "private": true,
  "description": "setup haskell action",
  "main": "lib/setup-haskell.js",
  "scripts": {
    "build": "rollup -c",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/setup-haskell.git"
